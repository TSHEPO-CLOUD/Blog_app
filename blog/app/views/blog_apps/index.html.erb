<p id="notice"><%= notice %></p>

<h1>Blog Apps</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_apps.each do |blog_app| %>
      <tr>
        <td><%= blog_app.topic %></td>
        <td><%= blog_app.body %></td>
        <td><%= link_to 'Show', blog_app %></td>
        <td><%= link_to 'Edit', edit_blog_app_path(blog_app) %></td>
        <td><%= link_to 'Destroy', blog_app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog App', new_blog_app_path %>
